<%include partials/header%>
<div class="container">
        
    <div class="row">
        <h1>Add a  Comment to <%=campgrounds.name%></h1>
        <div  style="width:30%; margin: 0 auto;">
            <form  action="/campgrounds/<%=campgrounds._id%>/comments" method="POST">
                <div class="form-group">
                     <input type="text" name="commenttext" class="form-control" placeholder="Text">
                
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-default btn-block" >Submit</button>
                </div>
            </form>
        </div>
    </div>
    <a href="/campgrounds" class="btn btn-primary">Show Campgrounds</a>
</div>
<% include partials/footer %>