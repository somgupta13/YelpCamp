<%include partials/header%>
<div class="container">
        
    <div class="row">
        <h1>Edit Campground</h1>
        <div  style="width:30%; margin: 0 auto;">
            <form  action="/campgrounds/<%=campgrounds._id%>" method="POST">
                <div class="form-group">
                    <input type="text" name="camp[name]" class="form-control" value="<%=campgrounds.name%>" placeholder="Name">
               
                </div>
                <div class="form-group">
                     <input type="text" name="camp[img]" class="form-control" value="<%=campgrounds.img%>" placeholder="Image Link">
                
                </div>
                <div class="form-group">
                     <input type="text" name="camp[d2]" class="form-control" placeholder="Description" value="<%=campgrounds.desc%>">
                
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-default btn-block" >Submit</button>
                </div>
                
            </form>
            
        </div>
        
    </div>
    <a href="/campgrounds" class="btn btn-primary">Show Campgrounds</a>
</div>
<% include partials/footer %>